@model Movie

<div class="card shadow border-0 mt-4" style="margin-bottom: 50px">

    <div class="row p-4">
        <div class="col-sm-6 col-md-4 col-12">
            <img src="@Model.ImageUrl" width="75%" class="rounded mb-3" />
        </div>

        <div class="col-sm-6 col-md-8 col-12">
            <div class="row">
                <h1>@Model.Title &nbsp;(@Model.ReleaseYear)</h1>
                <p class="mt-4">Genre: @Model.Genre</p>
                <p class="mt-4">Directed by: @Model.Director</p>
                <p class="mt-4">Synopsis: @Html.Raw(Model.Synopsis)</p>
                <a asp-controller="Movie" asp-action="Index" class="btn btn-info col-3 mt-4 mx-3"><i class="bi bi-film"></i>&nbsp;&nbsp;Rent</a>
            </div>
        </div>
    </div>

</div>

<div class="card shadow border-0 mt-3" style="margin-bottom: 100px; min-height: 200px">
    <div class="row d-flex justify-content-between align-items-center">
        <h1  class="m-3" style="width: 40%">User Reviews</h1>
        <a asp-controller="Movie" asp-action="Index" class="btn btn-success col-2 mt-2 mx-5"><i class="bi bi-pencil"></i>&nbsp;&nbsp;Write a Review</a>
    </div>

</div>